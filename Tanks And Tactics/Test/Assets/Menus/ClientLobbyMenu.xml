	<Texture Name="LobbyLeaderSymbol">
		<Width> 32 </Width>
		<Height> 32 </Height>
		<PositionX> 670 </PositionX>
		<PositionY> 160 </PositionY>
		<Texture> Assets/Images/LobbyLeader.png </Texture>
	</Texture>
	
	<EditBox Name="ChatInputEditBox">
		<Template> Standard </Template>
		<Width> 680 </Width>
		<Height> 26 </Height>
		<PositionX> 20 </PositionX>
		<PositionY> 580 </PositionY>
		<Text> </Text>
		<Font> Arial-12 </Font>
		<Justification> Left </Justification>
	</EditBox>

	<TextButton Name="EnterTextButton">
		<Template> Standard </Template>
		<Width> 120 </Width>
		<Height> 26 </Height>
		<PositionX> 710 </PositionX>
		<PositionY> 580 </PositionY>
		<Text> Enter Text </Text>
		<Font> Arial-12 </Font>
	</TextButton>

	<TextButton Name="StartGameTextButton">
		<Template> Standard </Template>
		<Width> 120 </Width>
		<Height> 26 </Height>
		<PositionX> 860 </PositionX>
		<PositionY> 580 </PositionY>
		<Text> Start Game </Text>
		<Font> Arial-12 </Font>
	</TextButton>
	
