	<ListBox Name="PlayerListBox">
		<Template> Standard </Template>
		<Width> 270 </Width>
		<Height> 320 </Height>
		<PositionX> 710 </PositionX>
		<PositionY> 200 </PositionY>
		<DirectionalButtonsX> 250 </DirectionalButtonsX>
		<DirectionalButtonsY> 0 </DirectionalButtonsY>
		<UpButtonW> 20 </UpButtonW>
		<UpButtonH> 20 </UpButtonH>
		<DownButtonW> 20 </DownButtonW>
		<DownButtonH> 20 </DownButtonH>
