			<TextBlock Name="MapNameTextBlock">
				<Width> 270 </Width>
				<Height> 26 </Height>
				<PositionX> 720 </PositionX>
				<PositionY> 76 </PositionY>
				<Font> Arial-12 </Font>
				<Text> MAP_NAME </Text>
