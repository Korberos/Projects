<MenuDialog>
	
	<!-- Show the lobby customization options (will be invisible to non-leaders) -->
	<Frame Name="CustomOptionsFrame">
		<Template> Standard </Template>
		<Width> 400 </Width>
		<Height> 200 </Height>
		<PositionX> 10 </PositionX>
		<PositionY> 30 </PositionY>
		<Moveable> True </Moveable>
		<Elements>
			
			<TextBlock Name="CustomizeLobbyText">
				<Width> 240 </Width>
				<Height> 36 </Height>
				<PositionX> 10 </PositionX>
				<PositionY> 10 </PositionY>
				<Font> Arial-12 </Font>
				<Text> Create a custom lobby: </Text>
				<Justification> Left </Justification>
				<Rows> 1 </Rows>
			</TextBlock>

			<TextBlock Name="BattleNameText">
				<Width> 120 </Width>
				<Height> 28 </Height>
				<PositionX> 20 </PositionX>
				<PositionY> 60 </PositionY>
				<Font> Arial-12 </Font>
				<Text> Battle Name: </Text>
				<Justification> Left </Justification>
				<Rows> 1 </Rows>
			</TextBlock>

			<EditBox Name="BattleNameEditBox">
				<Template> Standard </Template>
				<Width> 200 </Width>
				<Height> 26 </Height>
				<PositionX> 120 </PositionX>
				<PositionY> 54 </PositionY>
				<Font> Arial-12 </Font>
				<Text> </Text>
				<Justification> Left </Justification>
			</EditBox>

			<TextBlock Name="BattleTypeText">
				<Width> 120 </Width>
				<Height> 28 </Height>
				<PositionX> 20 </PositionX>
				<PositionY> 92 </PositionY>
				<Font> Arial-12 </Font>
				<Text> Battle Type: </Text>
				<Justification> Left </Justification>
				<Rows> 1 </Rows>
			</TextBlock>

			<DropDown Name="BattleTypeDropDown">
				<Template> Standard </Template>
				<Width> 224 </Width>
				<Height> 28 </Height>
				<PositionX> 120 </PositionX>
				<PositionY> 86 </PositionY>
				<DropDownX> 202 </DropDownX>
				<DropDownY> 8 </DropDownY>
				<DropDownW> 12 </DropDownW>
				<DropDownH> 12 </DropDownH>
				<Entries>
					<entry> Deathmatch </entry>
				</Entries>
				<Justification> Left </Justification>
				<Font> Arial-12 </Font>
			</DropDown>

			<TextBlock Name="MapText">
				<Width> 240 </Width>
				<Height> 36 </Height>
				<PositionX> 20 </PositionX>
				<PositionY> 124 </PositionY>
				<Font> Arial-12 </Font>
				<Text> Map: </Text>
				<Justification> Left </Justification>
				<Rows> 1 </Rows>
			</TextBlock>

			<DropDown Name="MapDropDown">
				<Template> Standard </Template>
				<Width> 260 </Width>
				<Height> 28 </Height>
				<PositionX> 120 </PositionX>
				<PositionY> 118 </PositionY>
				<DropDownX> 238 </DropDownX>
				<DropDownY> 8 </DropDownY>
				<DropDownW> 12 </DropDownW>
				<DropDownH> 12 </DropDownH>
				<Entries></Entries>
				<Justification> Left </Justification>
				<Font> Arial-12 </Font>
			</DropDown>

			<TextBlock Name="PlayersTypeText">
				<Width> 240 </Width>
				<Height> 36 </Height>
				<PositionX> 20 </PositionX>
				<PositionY> 156 </PositionY>
				<Font> Arial-12 </Font>
				<Text> Players: </Text>
				<Justification> Left </Justification>
				<Rows> 1 </Rows>
			</TextBlock>

			<DropDown Name="PlayersTypeDropDown">
				<Template> Standard </Template>
				<Width> 160 </Width>
				<Height> 28 </Height>
				<PositionX> 120 </PositionX>
				<PositionY> 150 </PositionY>
				<DropDownX> 138 </DropDownX>
				<DropDownY> 8 </DropDownY>
				<DropDownW> 12 </DropDownW>
				<DropDownH> 12 </DropDownH>
				<Entries>
					<entry> 1 versus 1 </entry>
					<entry> 2 versus 2 </entry>
					<entry> 3 player brawl </entry>
					<entry> 4 player brawl </entry>
				</Entries>
				<Justification> Left </Justification>
				<Font> Arial-12 </Font>
			</DropDown>

			<TextButton Name="StartLobbyButton">
				<Template> Standard </Template>
				<Width> 180 </Width>
				<Height> 28 </Height>
				<PositionX> 20 </PositionX>
				<PositionY> 190 </PositionY>
				<Text> Start Lobby </Text>
				<Font> Arial-12 </Font>
			</TextButton>

			<TextButton Name="CancelLobbyButton">
				<Template> Standard </Template>
				<Width> 180 </Width>
				<Height> 28 </Height>
				<PositionX> 220 </PositionX>
				<PositionY> 190 </PositionY>
				<Text> Cancel </Text>
				<Font> Arial-12 </Font>
			</TextButton>

		</Elements>
	</Frame>

